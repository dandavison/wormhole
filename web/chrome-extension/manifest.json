{
  "manifest_version": 3,
  "name": "Wormhole",
  "version": "3.5",
  "description": "GitHub/JIRA integration for Wormhole: redirects file links and adds project switch buttons",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://*.atlassian.net/*",
    "http://localhost:7117/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://*.atlassian.net/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

